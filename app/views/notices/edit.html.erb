<head>
    <style>
        textarea{
            width: 400px;
            height: 300px;
        }
        notice_form{
            margin-top: 20px;
        }
        #title{
            font-size: 15px;
            font: bold;
        }
        #content{
            font-size: 12px;
        }
    </style>
</head>

<center>
    <br/><br/><br/><br/><br/><br/><br/>
    <div class="notice_form">
        <%= form_for @notice do |f| %>
            <div class="form-group row">
              <label for="example-text-input" class="col-4 col-form-label">제목</label>
              <div class="col-4">
                <%=f.text_field 'title',class: "form-control", id: "title" %><br/><br/>
              </div>
            </div>
            <div class="form-group">
                <label for="exampleTextarea">내용</label>
                <div class="col-6">
                    <%=f.text_area 'content',class: "form-control", rows: "30", id: "content"%><br/><br/>
                </div>
             </div>
            <div class="form-group row">
              <label for="example-datetime-local-input" class="col-4 col-form-label">Date and time</label>
              <div class="col-4">
                <%=f.datetime_field 'deadline', class: "form-control"%><br/><br/>
              </div>
            </div>
            <%=f.submit '작성' %>
        <%end%>
    </div>
</center>