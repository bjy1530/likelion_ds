<style>
  form{
    font-family: 'Arita-dotum-Medium'; 
  }
  .field{
    font-size: 15px;
  }
</style>
<br/><br/><br/><br/><br/><br/><br/><br/>
  <h1 style="font-family: 'YiSunShinDotumM';" align="center">로그인</h1>
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
<div class="form-group">
  <div class="field">
    <%= f.label :email , for: "exampleInputEmail1" , class: "offset-md-4"%><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" , class: "form-control offset-md-4 col-4", id: "exampleInputEmail1"%>
  </div>
  <br/>
  <div class="field">
    <%= f.label :password, class: "offset-md-4" %><br />
    <%= f.password_field :password, autocomplete: "off" ,class: "form-control offset-md-4 col-4" %>
  </div>
<br/><br/>
<center>
  <% if devise_mapping.rememberable? -%>
    <div class="field">
      <%= f.check_box :remember_me%>
      <%= f.label :remember_me %>
    </div>
  <% end -%>

  <div class="actions">
    <%= f.submit "로그인", :class =>'btn btn-form bg-danger', :style => "color:white;" %>
  </div>
</div>
<% end %>

<%= render "devise/shared/links" %>
<br/>
</center>