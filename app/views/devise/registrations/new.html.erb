<style>
  form{
    font-family: 'Arita-dotum-Medium'; 
    font-size: 13px;
  }
</style>

<br/><br/><br/><br/><br/><br/><br/>
<center><h1 style="font-family: 'YiSunShinDotumM';">회원가입</h1></center>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="form-group offset-md-4">
    <label for="email">Email</label>
    <%= f.email_field :email, autofocus: true ,:class => 'form-control col-6'%>
  </div>
  
  <div class="form-group offset-md-4">
    <label for="name">Name</label>
    <%= f.text_field :name ,:class => 'form-control col-6'%>
  </div>
    
  <div class="form-group offset-md-4">
   
    <label for="nickname">Nickname</label>
    <%= f.text_field :nickname  ,:class => 'form-control col-6'%>
  </div>
  
  <div class="form-group offset-md-4">
    <label for="avatar">이미지</label>
    <%= f.file_field :avatar, :class=>'form-control col-6' %>
  </div>
  
  <div class="form-group offset-md-4">
    <%= f.label :password%>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off" ,:class => 'form-control col-6'%>
  </div>

  <div class="form-group offset-md-4">
    <%= f.label :password_confirmation %><br />
     <!--<label for="password_confirmation">Password_confirmation</label>-->
    <%= f.password_field :password_confirmation, autocomplete: "off" ,:class => 'form-control col-6'%>
  </div>
  <br/><br/>
  <center>
    <div class="actions">
        <%= f.submit "가입하기" ,:class =>'btn btn--form  btn-danger btn-sm btn-signin', :style => "color:white; text-decoration:none;"%>
        <button type="reset" style="color:white; width: 50px;" class="btn btn-danger btn-sm btn-signin">취소</button>
    </div>   
<% end %>
<br/>
   <%= render "devise/shared/links" %><br/>
</center>