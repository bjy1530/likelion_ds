
<li class="c" id="comment-<%=comment.id%>">
    <div class="collection-item list-group-item">
        <span class="right"><%= comment.created_at.year %>년 <%= comment.created_at.month %>월<%= comment.created_at.day %>일 <%= comment.created_at.hour%>:<%= comment.created_at.min%></span> &nbsp;
        <span class="title"><strong>작성자 : </strong><%= comment.nickname %></span><br><br/>
        <p><%= comment.context %></p><br>
            
        <% if signed_in? %>
            <% if comment.user_id == current_user.id %>
        
            
            <%= link_to "삭제", comment_path(comment),
                                method: :delete,
                                remote: true,
                                data: {confirm: "정말로 삭제하시겠습니까?"},
                                class: "btn btn-danger offset-md-11",
                                style: "color:white; text-decoration:none;"%>
                                    
            <% end %>
        <%end%>
    </div>
</li>
